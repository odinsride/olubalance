<% if @form_obj.errors.any? %>
  <article id="error explanation" class="bg-red-100 border border-red-400 rounded-md shadow py-2 px-3 lg:py-4 lg:px-8 text-sm text-primary-700 mb-4">
    <div class="font-semibold text-base mb-2">
      Something went wrong!
    </div>
    <div>
      Please correct the following <span class="font-semibold"><%= pluralize(@form_obj.errors.count, "error") %></span>:
      <ul class="list-disc list-inside">
        <% @form_obj.errors.full_messages.each do |msg | %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  </article>
<% end %>